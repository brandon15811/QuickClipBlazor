@inherits LayoutComponentBase
@inject SessionHolder SessionHolder
@inject NavigationManager NavigationManager
@implements IDisposable

<!-- Modal -->
<div class="modal fade" id="leaveGameModal" tabindex="-1" role="dialog" aria-labelledby="leaveGameModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New game?</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to start a new game?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" @onclick="() => GoHome()">Yes</button>
            </div>
        </div>
    </div>
</div>

<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <div class="navbar-brand" href="#">QuickClip</div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        @if (SessionHolder.Session != null)
        {
            <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li class="gameInfo">
                        <a>Artist: @SessionHolder.Session.CurrentArtist.Name</a>
                    </li>
                    <li class="gameInfo">
                        <a>Score: @SessionHolder.Session.Score</a>
                    </li>
                    <li class="gameInfo">
                        <a>Round: @SessionHolder.Session.Round/@SessionHolder.Session.TotalRounds</a>
                    </li>
                    <li class="gameInfo" data-toggle="modal" data-target="#leaveGameModal">
                        <a class="btn btn-large btn-primary">Change Artist</a>
                    </li>
                </ul>
            </div>   
        }
    </div>
</nav>

<div class="container jumbotron" style="margin-top: 64px;">
    <div class="container-fluid" style="max-width: 600px;">
        @Body
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        SessionHolder.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        SessionHolder.OnChange -= StateHasChanged;
    }

    private void GoHome()
    {
        NavigationManager.NavigateTo($"/");
    }

}

}