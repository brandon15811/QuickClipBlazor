@using QuickClipBlazor.Services
@inherits LayoutComponentBase
@inject SessionHolder SessionHolder

<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">QuickClip</a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        @if (SessionHolder.Session != null)
        {
            <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li class="gameInfo">
                        <a>Artist: @SessionHolder.Session.CurrentArtist.Name</a>
                    </li>
                    <li class="gameInfo">
                        <a>Score: @SessionHolder.Session.Score</a>
                    </li>
                    <li class="gameInfo">
                        <a>Round: @SessionHolder.Session.Round/@SessionHolder.Session.TotalRounds</a>
                    </li>
                    <li class="gameInfo">
                        <a href="#" class="btn btn-large btn-primary">Change Artist</a>
                    </li>
                </ul>
            </div>   
        }
    </div>
</nav>

<div class="container jumbotron" style="margin-top: 64px;">
    <div class="container-fluid" style="max-width: 600px;">
        @Body
    </div>
</div>

@code {

    protected override void OnInitialized()
    {
        SessionHolder.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        SessionHolder.OnChange -= StateHasChanged;
    }
}

}