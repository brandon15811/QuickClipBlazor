@page "/Results"
@using QuickClipBlazor.Services
@inject SessionHolder SessionHolder

<h3>Results</h3>
<h4>Total Score: @Session.Score</h4>
<h4>Number correct: @Session.RoundResults.Count(x => x.IsCorrect)/10</h4>
<ul>
    @foreach (var gameRound in Session.RoundResults)
    {
        <li>
            Round: @gameRound.Round<br>
            Selected: @gameRound.SelectedAnswer.Title<br>
            Correct: @gameRound.CorrectAnswer.Title<br>
        </li>
    }
</ul>

@code {
    public GameSession Session { get; set; } = new GameSession();
    
    protected override void OnInitialized()
    {
        Session = SessionHolder.Session;
    }

}